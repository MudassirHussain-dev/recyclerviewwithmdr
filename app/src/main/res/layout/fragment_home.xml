<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/smoke_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ic_lime_gradient">

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:layout_marginTop="-30dp"
                        android:background="@drawable/user_whitefill_darkgreenstroke">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="sans-serif"
                            android:text="Muhammad Usman Rauf"
                            android:textColor="@color/dark_green"
                            android:textSize="20dp"
                            android:id="@+id/txt_FullName"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"
                            android:text="031264513937"
                            android:textColor="@color/dark_green"
                            android:textSize="20dp"
                            android:drawableTint="@color/dark_green"
                            android:id="@+id/txt_Mobilenumber"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"
                            android:text="Mian Channu"
                            android:textColor="@color/dark_green"
                            android:textSize="20dp"
                            android:drawableTint="@color/dark_green"
                            android:id="@+id/txt_City"
                           />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="-50dp"
                    android:background="@color/transparent">

                    <ImageButton
                        android:id="@+id/btn_Carpenter"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_carpenter"
                        android:layout_margin="10dp"
                        />
                    <ImageButton
                        android:id="@+id/btn_Plumber"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_plumber"
                        android:layout_margin="10dp"
                        />
                    <ImageButton
                        android:id="@+id/btn_Electrician"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_electrician"
                        android:layout_margin="10dp"
                        />

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/transparent">

                <ImageButton
                    android:id="@+id/btn_Appliances"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ic_appliances"
                    android:layout_margin="10dp"
                    />
                <ImageButton
                    android:id="@+id/btn_Laundary"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ic_laundry"
                    android:layout_margin="10dp"
                    />
                <ImageButton
                    android:id="@+id/btn_Cleaning"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ic_cleaning"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/transparent">

                <ImageButton
                    android:id="@+id/btn_Painting"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ic_painting"
                    android:layout_margin="10dp"
                    />
                <ImageButton
                    android:id="@+id/btn_Shifting"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ic_shifting"
                    android:layout_margin="10dp"
                    />
                <ImageButton
                    android:id="@+id/btn_Welder"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ic_welder"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

